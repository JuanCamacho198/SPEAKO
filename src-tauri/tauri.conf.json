{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Speako",
  "version": "1.0.0",
  "identifier": "com.juan-camacho.speako",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Speako",
        "width": 380,
        "height": 420,
        "resizable": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "center": true,
        "transparent": true,
        "shadow": true
      }
    ],
    "trayIcon": null,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
